<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learning Modules"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Buttons for each module -->
        <Button android:id="@+id/btn_module1" android:text="Module 1"  android:layout_height="3.px" android:layout_width="3.0px"/>
        <Button android:id="@+id/btn_module2" android:text="Module 2" android:layout_height="3.px" android:layout_width="3.0px"/>
        <Button android:id="@+id/btn_module3" android:text="Module 3" android:layout_height="3.px" android:layout_width="3.0px"/>
        <Button android:id="@+id/btn_module4" android:text="Module 4" android:layout_height="3.px" android:layout_width="3.0px"/>
        <Button android:id="@+id/btn_module5" android:text="Module 5" android:layout_height="3.px" android:layout_width="3.0px"/>
        <Button android:id="@+id/btn_module6" android:text="Module 6" android:layout_height="3.px" android:layout_width="3.0px"/>
        <Button android:id="@+id/btn_module7" android:text="Module 7" android:layout_height="3.px" android:layout_width="3.0px"/>
        <Button android:id="@+id/btn_module8" android:text="Module 8" android:layout_height="3.px" android:layout_width="3.0px"/>
        <Button android:id="@+id/btn_module9" android:text="Module 9" android:layout_height="3.px" android:layout_width="3.0px"/>
        <Button android:id="@+id/btn_module10" android:text="Module 10" android:layout_height="3.px" android:layout_width="3.0px"/>
        <Button android:id="@+id/btn_module11" android:text="Module 11" android:layout_height="3.px" android:layout_width="3.0px"/>
        <Button android:id="@+id/btn_module12" android:text="Module 12" android:layout_height="3.px" android:layout_width="3.0px"/>
        <Button android:id="@+id/btn_module13" android:text="Module 13" android:layout_height="3.px" android:layout_width="3.0px"/>

    </LinearLayout>
</ScrollView>
