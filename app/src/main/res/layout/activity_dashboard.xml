<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="32dp">

        <!-- Course Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CS 4322: MOBILE SOFTWARE DEVELOPMENT"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome, Anna!"
            android:textColor="#1E50FF"
            android:textSize="18sp"
            android:layout_marginBottom="32dp" />

        <!-- Start Here Button -->
        <Button
            android:id="@+id/btn_start_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START HERE"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:backgroundTint="#448AFF"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_blue_button" />

        <!-- Learning Modules Button -->
        <Button
            android:id="@+id/btn_learning_modules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LEARNING MODULES"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_green_button" />

    </LinearLayout>
</ScrollView>
